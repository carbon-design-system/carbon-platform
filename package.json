{
  "name": "carbon-platform-monorepo",
  "version": "0.0.0",
  "description": "Carbon platform monorepo",
  "license": "Apache-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carbon-design-system/carbon-platform.git"
  },
  "bugs": {
    "url": "https://github.com/carbon-design-system/carbon-platform/issues"
  },
  "homepage": "https://github.com/carbon-design-system/carbon-platform#readme",
  "engines": {
    "node": "16",
    "npm": "8"
  },
  "workspaces": [
    "packages/api",
    "packages/icons",
    "packages/micromanage",
    "packages/schemas",
    "services/data-graph",
    "services/logging",
    "services/web-app"
  ],
  "scripts": {
    "all:build": "npm --workspaces --if-present run build",
    "all:clean": "npm --workspaces --include-workspace-root --if-present run clean",
    "clean": "rimraf .tsbuildinfo .test-coverage",
    "lint": "scripts/lint",
    "lint:fix": "scripts/lint_and_fix",
    "micromanage:bootstrap": "node packages/micromanage/scripts/bootstrap.js",
    "packages:build": "npm --workspaces --if-present run package:build",
    "prepare": "if [ \"$CI\" != 'true' ]; then scripts/prepare; fi",
    "services:build": "npm --workspaces --if-present run service:build",
    "test": "jest --config=./.jestrc.js"
  },
  "dependencies": {
    "esbuild": "~0.14.38",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@next/eslint-plugin-next": "^12.1.6",
    "@types/jest": "^27.5.0",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-jsdoc": "^39.2.9",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-storybook": "^0.5.11",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.1",
    "npm-check-updates": "^12.5.11",
    "prettier": "^2.6.2",
    "standard-version": "^9.3.2",
    "stylelint": "^14.8.2",
    "stylelint-config-carbon": "~1.9.0",
    "ts-jest": "^27.1.4"
  }
}
