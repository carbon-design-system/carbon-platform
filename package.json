{
  "name": "carbon-platform-monorepo",
  "version": "0.0.0",
  "description": "Carbon platform monorepo",
  "license": "Apache-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carbon-design-system/carbon-platform.git"
  },
  "bugs": {
    "url": "https://github.com/carbon-design-system/carbon-platform/issues"
  },
  "homepage": "https://github.com/carbon-design-system/carbon-platform#readme",
  "engines": {
    "node": "16",
    "npm": "8"
  },
  "workspaces": [
    "packages/api",
    "packages/icons",
    "packages/micromanage",
    "packages/schemas",
    "services/logging",
    "services/web-app"
  ],
  "scripts": {
    "all:build": "npm --workspaces --if-present run build",
    "all:clean": "npm --workspaces --if-present run clean",
    "lint": "scripts/lint",
    "lint:fix": "scripts/lint_and_fix",
    "micromanage:bootstrap": "node packages/micromanage/scripts/bootstrap.js",
    "packages:build": "npm --workspaces --if-present run package:build",
    "prepare": "if [ \"$CI\" != 'true' ]; then scripts/prepare; fi",
    "services:build": "npm --workspaces --if-present run service:build",
    "test": "jest --config=./.jestrc.js"
  },
  "dependencies": {
    "esbuild": "~0.14.27",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "eslint": "^7.32.0",
    "eslint-config-carbon": "^2.12.0",
    "eslint-config-next": "^12.1.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-jest": "^26.1.2",
    "eslint-plugin-jsdoc": "^38.0.6",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "npm-check-updates": "^12.5.4",
    "prettier-config-carbon": "^0.6.0",
    "standard-version": "^9.3.2",
    "stylelint": "^14.6.0",
    "stylelint-config-carbon": "^1.8.0",
    "ts-jest": "^27.1.4"
  }
}
