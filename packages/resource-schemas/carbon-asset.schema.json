{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://carbondesignsystem.com/schemas/carbon-asset.schema.json",
  "title": "Carbon Asset",
  "description": "Assets are reusable units of work that are used in products and digital experiences. Every asset belongs to a library.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Every asset needs an identifier unique to its library. This is used to associate assets across libraries."
    },
    "name": {
      "type": "string",
      "description": "Asset display name. Use sentence-case capitalization. All asset names in a library should be unique to prevent page collisions."
    },
    "description": {
      "type": "string",
      "description": "Asset description ideally between 50-160 characters in length. Use sentence-case capitalization."
    },
    "status": {
      "type": "string",
      "default": "draft",
      "enum": ["deprecated", "draft", "experimental", "stable"],
      "description": "Used to set consumption expectations."
    },
    "type": {
      "type": "string",
      "enum": ["component", "element", "function", "template", "pattern"],
      "description": "Asset categorization."
    },
    "tags": {
      "type": "array",
      "minItems": 1,
      "items": {
        "enum": [
          "content-block",
          "content-element",
          "contextual-navigation",
          "data-display",
          "data-visualization",
          "form",
          "input-control",
          "media",
          "shell",
          "structural-navigation",
          "system-feedback",
          "comparison",
          "connection",
          "correlation",
          "geographic-overlay",
          "geospatial-distortion",
          "part-to-whole",
          "trend",
          "hook",
          "service",
          "utility"
        ]
      },
      "description": "Asset secondary categorizations."
    },
    "framework": {
      "type": "string",
      "enum": [
        "angular",
        "react",
        "react-native",
        "svelte",
        "vanilla",
        "vue",
        "web-component",
        "design-only"
      ],
      "description": "Asset frontend framework."
    },
    "platform": {
      "type": "string",
      "default": "web",
      "enum": ["cross-platform", "web"],
      "description": "Asset environment."
    },
    "thumbnailPath": {
      "type": "string",
      "description": "Relative location of the asset's thumbnail image."
    },
    "externalDocsUrl": {
      "type": "string",
      "description": "Absolute URL to externally-hosted documentation."
    },
    "private": {
      "type": "boolean",
      "default": false,
      "description": "If set to true, the catalogs will exclude the asset."
    },
    "inherits": {
      "type": "object",
      "properties": {
        "asset": {
          "type": "string",
          "description": "Fully qualified asset name with the format [library id]/[asset id] or [library id]@[repo ref]/[asset id]."
        },
        "properties": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "id",
              "description",
              "externalDocsUrl",
              "framework",
              "name",
              "platform",
              "private",
              "status",
              "thumbnailPath",
              "type",
              "tags",
              "demoLinks"
            ]
          },
          "description": "Asset keys to inherit.",
          "minItems": 1
        },
        "additionalProperties": false,
        "primary": {
          "type": "boolean",
          "description": "Set to true if this asset inheriting another asset is the canonical implementation. This is used to collapse similar assets in the catalogs when a framework filter has not been applied.",
          "default": false
        }
      },
      "additionalProperties": false,
      "description": "Each asset can inherit properties from another asset.",
      "required": ["asset", "properties"]
    },
    "demoLinks": {
      "description": "Libraries and assets can specify links to demo sites.",
      "minItems": 1,
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["codesandbox", "github", "storybook"],
            "description": "Determines the display icon."
          },
          "name": {
            "type": "string",
            "description": "Display name."
          },
          "action": {
            "type": "string",
            "default": "link",
            "enum": ["download", "link"],
            "description": "Determines the action icon."
          },
          "url": {
            "type": "string",
            "description": "Link to the resource."
          }
        },
        "additionalProperties": false,
        "required": ["type", "name", "url"]
      }
    }
  },
  "additionalProperties": false,
  "required": ["id", "description", "name", "status", "type"]
}
