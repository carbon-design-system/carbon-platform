{
  "name": "carbon-platform-monorepo",
  "version": "0.0.0",
  "description": "Carbon platform monorepo",
  "license": "Apache-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carbon-design-system/carbon-platform.git"
  },
  "bugs": {
    "url": "https://github.com/carbon-design-system/carbon-platform/issues"
  },
  "homepage": "https://github.com/carbon-design-system/carbon-platform#readme",
  "engines": {
    "node": "16",
    "npm": "8"
  },
  "workspaces": [
    "packages/api",
    "packages/icons",
    "packages/micromanage",
    "packages/schemas",
    "services/data-graph",
    "services/logging",
    "services/web-app"
  ],
  "scripts": {
    "all:build": "npm --workspaces --if-present run build",
    "all:clean": "npm --workspaces --include-workspace-root --if-present run clean",
    "clean": "rimraf .tsbuildinfo .test-coverage",
    "lint": "scripts/lint",
    "lint:fix": "scripts/lint_and_fix",
    "micromanage:bootstrap": "node packages/micromanage/scripts/bootstrap.js",
    "packages:build": "npm --workspaces --if-present run package:build",
    "prepare": "scripts/prepare",
    "services:build": "npm --workspaces --if-present run service:build",
    "test": "c8 --config=.c8rc.json npm --workspaces --if-present run test"
  },
  "dependencies": {
    "esbuild": "~0.14.43",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@graphql-eslint/eslint-plugin": "^3.10.4",
    "@next/eslint-plugin-next": "^12.1.6",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "ava": "^4.3.0",
    "c8": "^7.11.3",
    "eslint": "^8.17.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-ava": "^13.2.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.2",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-storybook": "^0.5.12",
    "graphql-config": "^4.3.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "npm-check-updates": "^13.1.5",
    "prettier": "^2.7.0",
    "standard-version": "^9.5.0",
    "stylelint": "^14.9.1",
    "stylelint-config-carbon": "~1.10.0",
    "ts-node": "^10.8.1"
  }
}
